    Function EnviarOrden(trama As String)
        SnPrincipal.Conexion.DiscardOutBuffer()
        SnPrincipal.Conexion.Write(trama)
        SnPrincipal.RichTextBox2.Text &= "Enviado" & vbCrLf
    End Function
